{
  "name": "slack-canvas-collector",
  "version": "1.0.0",
  "description": "Slack Canvas Collector - 絵文字リアクション付きメッセージを自動収集してCanvasにまとめるアプリ",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "npx ts-node src/app.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "@slack/bolt": "^4.1.0",
    "dotenv": "^16.4.7"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@vitest/coverage-v8": "^4.0.18",
    "prisma": "^7.3.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
